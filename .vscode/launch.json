    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Erebor/bin/Debug-linux-gcc-x86_64/Erebor",
            "args": [],
            "cwd": "${workspaceFolder}/Erebor",
            "stopAtEntry": false,
            "externalConsole": false,
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
            ],
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/Erebor/bin/Debug-linux-gcc-x86_64/"
                }
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Erebor/bin/Release-linux-gcc-x86_64/Erebor",
            "args": [],
            "cwd": "${workspaceFolder}/Erebor",
            "stopAtEntry": false,
            "externalConsole": false,
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
            ],
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/Erebor/bin/Release-linux-gcc-x86_64/"
                }
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}