{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "",
            "args": [],
            "cwd": "${workspaceFolder}/Erebor",
            "stopAtEntry": false,
            "externalConsole": false,
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
            ],
            "linux": {
                "environment": [
                    {
                        "name": "LD_LIBRARY_PATH",
                        "value": "${workspaceFolder}/Erebor/bin/Debug-linux-gcc-x86_64/"
                    }
                ],
                "program": "${workspaceFolder}/Erebor/bin/Debug-linux-gcc-x86_64/Erebor",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "program": "${workspaceFolder}/Erebor/bin/Debug-osx-x86_64/Erebor",
                "MIMode": "lldb"
            },
            "windows": {
                "program": "${workspaceFolder}/Erebor/bin/Debug-windows-x86_64/Erebor.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGw\\bin\\gdb.exe"
            }
        }
    ]
}